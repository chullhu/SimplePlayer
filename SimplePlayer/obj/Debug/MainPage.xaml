<Page
    x:Class="SimplePlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimplePlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock Text="My first media player" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30"/>
        <MediaElement x:Name="media" Source="Killpop.mp3" AudioCategory="BackgroundCapableMedia" AutoPlay="False"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:ConnectionId='1' x:Name="Play" Content="Play"                   />
            <Button x:ConnectionId='2' x:Name="pause" Content="Pause" Margin="10,0,0,0"                    />
        </StackPanel>
    </Grid>
</Page>

